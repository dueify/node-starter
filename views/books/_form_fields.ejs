<div><label for="title">Title: <input type="text" name="title" id="title" value="<%= book.title %>"/></label></div>
<div><label for="author">Author: <select id="author" name="author">
<% authors.forEach(author => { %>
<% if(author.id === book.author) { %>
  <option selected label="<%= author.name %>" value="<%= author.id %>"><%= author.name %></option>
  <% } else { %>
  <option value="<%= author.id %>"><%= author.name %></option>
  <% } %>
<% }) %>
</select></label></div>
<div>
<label for="publishDate">Published Date: <input type="date" name="publishDate" id="publishDate" value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split("T")[0] %>"/></label>
</div>
<div>
<label for="pageCount">Page Count: <input type="number" name="pageCount" id="pageCount" min="1" value="<%= book.pageCount %>"/></label>
</div>
<div>
<label for="cover">Cover: <input type="file" name="cover" id="cover"></label>
</div>
<div>
<label for="description">Description: <textarea name="description" id="description"><%= book.description %></textarea></label>
</div>